{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    // Remove if you want ts-node to do typechecking.
    // "transpileOnly": true,
    "files": true,
    "compilerOptions": {
    },
    // ESM-only https://typestrong.org/ts-node/docs/options#esm
    "esm": true,
    // https://typestrong.org/ts-node/docs/swc
    "swc": true,
  },
  "compilerOptions": {
    "module": "NodeNext",
    "lib": ["dom", "esnext"],
    "target": "esnext",
    "strict": true,
  },
}
